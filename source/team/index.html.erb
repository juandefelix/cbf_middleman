<%=partial "partials/banner", locals: data.team.banner_content%>

<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="mb-3 border-bottom">
      <h1><%=data.team.content.title%></h1>
      <button type="button" class="btn btn-lg btn-danger" data-container="body" data-bs-toggle="popover" title="Popover title" data-bs-content="And here's some amazing content. It's very engaging. Right?">Click to toggle popover</button>
    </div>
  </div>
  <p class="mb-5"><%=data.team.content.text%></p>
  <% 5.times do %>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
    <% data.team.members.each do |member| %>
    <div class="col-sm mb-5">
      <a tabindex="0" role="img" data-bs-toggle="popover" data-trigger="hover" title="About <%=member.first_name%>" data-content="<%=member.about%>"><img src="<%=member.image%>" class="rounded-lg"></a>
      <h5 class="mt-3"><%=member.full_name%></h5>
    </div>
    <%end%>
  </div>
  <%end%>
</div>