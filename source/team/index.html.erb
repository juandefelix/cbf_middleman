<%=partial "partials/banner", locals: data.team.banner_content%>

<div class="container mb-5">
  <div class="row justify-content-center">
    <div class="mb-3 border-bottom">
      <h1><%=data.team.content.title%></h1>
    </div>
  </div>
  <p class="mb-5"><%=data.team.content.text%></p>
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 justify-content-center">
    <% data.team.members.each do |member| %>
    <div class="col-sm mb-5">
      <img class="member rounded-lg" src="<%=member.image%>">
      <h5 class="mt-3"><%=member.full_name%></h5>
      <h6><%=member.info%></h6>
      <h6><%=member.phone%></h6>
      <h6><a href="mailto: <%=member.email%>"><%=member.email%></a></h6>
    </div>
    <%end%>
  </div>
</div>

